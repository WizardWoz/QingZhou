<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="commentActivityTheme" parent="AppCompatTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="TabButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_bg_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
    </style>

    <style parent="@android:style/Theme.Dialog" name="RoomCreateDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">#6495ED</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style parent="@android:style/Theme.Dialog" name="RecordCreateDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">#6495ED</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/popol_show</item>
        <item name="android:windowExitAnimation">@anim/popup_disappear</item>
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar"/>


</resources>
